@model ToDo

@{
    ViewData["Title"] = "Edit ToDo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit ToDo</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Subject">Subject</label>
        <input type="text" class="form-control" id="Subject" name="Subject" value="@Model.Subject" required>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
    </div>
    <input type="hidden" name="ToDoId" value="@Model.ToDoId" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
